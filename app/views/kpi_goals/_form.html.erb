<%= form_for(@kpi_goal, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%= f.hidden_field :id, class: "form-control" %>
  <%= f.hidden_field :department_id, class: "form-control" %>
  <div class="form-group">
    <%= f.label :quarter_id, 'Quarter', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :quarter_id, @quarters.collect { |p| [ p.name, p.id ] }, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :type, 'Type', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :type, KpiGoal::TYPES.collect{ |k| [k.second, k.first]}, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :metric, 'Metric', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :metric, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save", class: 'btn btn-jumbo float-right mr-2' %>
      <%= link_to "Cancel", kpi_goals_path, class: 'btn btn-outline-jumbo float-right mr-2', role: 'button'%>
    </div>
  </div>
<% end %>
