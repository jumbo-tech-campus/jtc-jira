<% options = options || {} %>
<table class="table table-bordered <%= options[:table_class] %>">
    <thead>
      <tr class="small">
        <% table[0].each do |header_item| %>
        <th><div class="text-rotated"><%= header_item %></div></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% table[1..-1].each do |row| %>
      <tr class="small">
        <% row.each_with_index do |row_item, index| %>
       <td class="<%= 'text-center' unless index == 0 || options[:align] == :left %>">
         <%= row_item %>
       </td>
       <% end %>
     </tr>
     <% end %>
    </tbody>
</table>
