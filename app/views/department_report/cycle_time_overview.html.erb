<div class="main">
  <div class="row pl-3">
    <ul class="nav">
      <% @quarters.each do |quarter| %>
      <li class="nav-item">
        <a class="btn btn-outline-jumbo btn-sm shadow-sm mb-4 mr-2 <%= 'active' if quarter == @current_quarter %>"
          href="<%= department_cycle_time_overview_path(quarter_id: quarter.id) %>">
          <%= quarter.name %>
        </a>
      </li>
     <% end %>
    </ul>
  </div>
  <div class="card box-shadow mb-4">
    <div class="card-header">
      <strong>Yearly cycle time averages overview for department: <%= @department.name %></strong><br>
      <small class="text-muted small">Average cycle time per year calculated from the issues moved to 'Released' in that period</small>
    </div>
    <div class="card-body">
      <%= render partial: 'shared/table', locals: { table: @report, options: { table_class: 'narrow-table'} } %>
    </div>
 </div>
</div>
