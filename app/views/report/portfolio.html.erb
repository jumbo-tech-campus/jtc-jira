<%= render 'shared/nav_bar' %>
<main role="main" class="container-fluid">
  <div class="main">
     <div class="card box-shadow mb-4">
       <div class="card-header">
         <strong>Portfolio report</strong><br>
         <small class="text-muted small">Percentage of points closed per portfolio epic compared to total points closed in the sprint</small>
       </div>
       <div class="card-body">
         <table class="table table-bordered">
             <thead>
               <tr class="small">
                 <% @table[0].each do |header_item| %>
                 <th><%= header_item %></th>
                 <% end %>
               </tr>
             </thead>
             <tbody>
               <% @table[1..-1].each do |row| %>
               <tr class="small">
                 <% row.each_with_index do |row_item, index| %>
                <td class="<%= 'text-center' unless index == 0 %>">
                  <%= row_item %>
                </td>
                <% end %>
              </tr>
              <% end %>
             </tbody>
         </table>
       </div>
    </div>
  </div>
</main>
