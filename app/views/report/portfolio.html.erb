<%= render 'shared/nav_bar' %>
<main role="main" class="container-fluid">
  <div class="main">
    <div class="row pl-3">
      <ul class="nav">
        <% @dates.each do |date| %>
        <li class="nav-item">
          <a class="btn btn-outline-secondary btn-sm shadow-sm mb-4 mr-2 <%= 'active' if false %>" href="<%= portfolio_report_path %>">
            Week <%= date.strftime('%W')  %>
          </a>
        </li>
       <% end %>
      </ul>
     </div>
     <div class="card box-shadow mb-4">
       <div class="card-header">
         <strong>Portfolio report</strong><br>
         <small class="text-muted small">Percentage of work in sprint per team per portfolio epic</small>
       </div>
       <div class="card-body">
         <table class="table table-bordered">
             <thead>
               <tr class="small">
                 <% @table[0].each do |header_item| %>
                 <th><%= header_item %></th>
                 <% end %>
               </tr>
             </thead>
             <tbody>
               <% @table[1..-1].each do |row| %>
               <tr class="small">
                 <% row.each_with_index do |row_item, index| %>
                <td class="<%= 'text-center' unless index == 0 %>">
                  <%= row_item %>
                </td>
                <% end %>
              </tr>
              <% end %>
             </tbody>
         </table>
       </div>
    </div>
  </div>
</main>
