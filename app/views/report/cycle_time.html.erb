<%= render 'shared/nav_bar' %>
<main role="main" class="container-fluid">
  <div class="main">
    <div class="row pl-3">
      <ul class="nav">
        <% @teams.each do |team| %>
        <li class="nav-item">
          <a class="btn btn-outline-jumbo btn-sm shadow-sm mb-4 mr-2 <%= 'active' if @board.id == team.board_id %>"
            href="<%= cycle_time_report_path(board_id: team.board_id) %>">
            <%= team.name %>
          </a>
        </li>
       <% end %>
      </ul>
     </div>
     <div class="card box-shadow mb-4">
       <div class="card-header">
         <strong><%= @board.team.name %>: Cycle time scatter plot</strong><br>
       </div>
       <div class="scatter-plot m-4"></div>
     </div>

     <script>
       $.getJSON('<%= cycle_time_report_path(board_id: @board.id, format: 'json') %>', function(data){
         cycle_time_data = data.table.slice(1).reduce(function(memo, cycle_time_record){
           memo[0].push(cycle_time_record[2]);
           memo[1].push(cycle_time_record[3]);
           return memo;
         }, [['cycle_time_x'], ['cycle time']]);

         regression_data = data.regression.reduce(function(memo, regression_record){
           memo[0].push(regression_record[0]);
           memo[1].push(regression_record[1]);
           return memo;
         }, [['trendline_x'], ['trendline']]);

         chart_data = cycle_time_data.concat(regression_data);
         console.log(chart_data);

         var chart = c3.generate({
           padding: {
              right: 40,
              left: 40
           },
           bindto: d3.select('.scatter-plot'),
           data: {
             xs: {
               'cycle time': 'cycle_time_x',
               trendline: 'trendline_x'
             },
             columns: chart_data,
             type: 'scatter',
             types: {
               trendline: 'line'
             }
           },
           axis: {
             y: {
               min: 0,
               padding: { top: 5, bottom:0 }
             },
             x: {
               type: 'timeseries',
               tick: {
                fit: true,
                count: 6,
                format: '%d-%m-%Y'
               }
             }
           },
           point: {
             r: 5,
             show: false
           }
         });

       });
    </script>

     <div class="card box-shadow mb-4">
       <div class="card-header">
         <a href="<%= cycle_time_report_path(board_id: @board.id, format: 'csv') %>"
           class="card-link float-right">
           Download as csv file
         </a>
         <strong><%= @board.team.name %>: Cycle time overview</strong><br>
       </div>
       <div class="card-body">
         <table class="table table-bordered">
             <thead>
               <tr class="small">
                 <% @table[0].each do |header_item| %>
                 <th><%= header_item %></th>
                 <% end %>
               </tr>
             </thead>
             <tbody>
               <% @table[1..-1].each do |row| %>
               <tr class="small">
                 <% row.each_with_index do |row_item, index| %>
                <td class="<%= 'text-center' unless index == 0 %>">
                  <%= row_item %>
                </td>
                <% end %>
              </tr>
              <% end %>
             </tbody>
         </table>
       </div>
    </div>
  </div>
</main>
