<div class="main">
  <div class="card box-shadow mb-4">
    <div class="card-header">
      <strong>2-weekly uptime percentages</strong><br>
      <small class="text-muted small">KPI uptime is the uptime outside of maintenance window (12AM - 8AM)</small>
    </div>
    <div class="card-body">
      <%= render partial: 'shared/table', locals: { table: @report[:uptime_table], options: { table_class: 'narrow-table'} } %>
    </div>
 </div>
 <div class="card box-shadow mb-4">
   <div class="card-header">
     <strong>jumbo.com downtime</strong><br>
   </div>
   <div class="card-body">
     <table class="table table-bordered">
         <thead>
           <tr class="small">
             <% @report[:downtime_table][0].each do |header_item| %>
             <th><%= header_item %></th>
             <% end %>
           </tr>
         </thead>
         <tbody>
           <% @report[:downtime_table][1..-1].each do |row| %>
           <tr class="small">
            <% row.each do |row_item| %>
            <td class="text-center%">
              <%= row_item %>
            </td>
            <% end %>
          </tr>
          <% end %>
         </tbody>
     </table>
   </div>
 </div>
 <div class="card box-shadow mb-4">
   <div class="card-header">
     <a href="<%= uptime_report_path(format: 'csv') %>"
       class="card-link float-right">
       Download as csv file
     </a>
     <strong>jumbo.com downtime events (<%= @report[:table].size - 1 %>)</strong><br>
   </div>
   <div class="card-body">
     <%= render partial: 'shared/issue_table', locals: { table: @report[:table] } %>
   </div>
 </div>
</div>
