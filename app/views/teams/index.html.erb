<main role="main" class="container">
  <div class="d-flex align-items-center p-3 my-3 rounded box-shadow">
    <%= image_tag('320px-Jumbo_Logo.png', height: '48', class:'mr-3') %>
    <div class="lh-100">
      <h5 class="mb-0 lh-100">JTC-JIRA</h5>
      <p class="text-muted mb-0">Sprint reports for JTC teams</p>
    </div>
  </div>

  <div class="my-3 p-3 bg-white rounded box-shadow">
    <h6 class="border-bottom border-gray pb-2 mb-0">Teams</h6>
    <% @teams.each do |team| %>
      <a href="<%= last_sprint_report_path(board_id: team.board_id) %>">
      <div class="media small pt-3">
        <img src="<%= team.avatars['32x32'] %>" alt="" class="mr-2 rounded" height="32" width="32">
        <p class="media-body pb-3 mb-0 text-muted lh-125 border-bottom border-gray">
          <strong class="d-block"><%= team.name %></strong>
          View sprint reports for project <%= "#{team.project_key} - #{team.project_name}" %>
        </p>
      </div>
      </a>
    <% end %>
  </div>
</main>
